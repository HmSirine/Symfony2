<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ClientFirstPageController">
    
   <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0055FF;" text="Nos activités" />
<GridPane fx:id="activitesGrid" alignment="CENTER" hgap="10.0" vgap="10.0">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES" />
    </rowConstraints>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
</GridPane>
<HBox alignment="CENTER" spacing="10.0">
    <Label style="-fx-font-size: 18px;" text="Total : ">
         <HBox.margin>
            <Insets top="20.0" />
         </HBox.margin></Label>
    <Label fx:id="totalLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
</HBox>
<HBox alignment="CENTER" spacing="10.0">
    <CheckBox fx:id="promoCheckBox" text="J'ai un code promo" />
    <Label fx:id="promoLabel" style="-fx-font-size: 16px;" />
</HBox>
<HBox alignment="CENTER" spacing="10.0">
    <Label style="-fx-font-size: 18px;" text="Prix à payer : " />
    <Label fx:id="prixLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
</HBox>

<HBox alignment="CENTER" spacing="10.0">
    <Button fx:id="excursionButton" onAction="#ToExcursionCategory" text="Voir les Excursions" />
</HBox>
</VBox>
